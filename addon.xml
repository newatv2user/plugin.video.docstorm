<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.docstorm"
       name="DocumentaryStorm"
       version="0.0.1"
       provider-name="newatv2user">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.parsedom" version="0.9.0"/>
    <import addon="script.module.videohosts.beta" version="0.0.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Free documentaries.</summary>
    <description lang="en">Documentaries posted on documentarystorm.com.</description>
     <platform>all</platform>
  </extension>
</addon>
